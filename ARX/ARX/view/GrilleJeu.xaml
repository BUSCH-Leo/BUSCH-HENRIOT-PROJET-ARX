<UserControl x:Class="ARX.view.GrilleJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Options">
                <MenuItem Header="Save" Click="SaveButton_Click"/>
                <MenuItem Header="Leave" Click="QuitterButton_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel DockPanel.Dock="Left" Margin="10">
            <TextBlock>
                <Run Text="Vie : "/>
                <Run Text="{Binding joueur.Vie}"/>
            </TextBlock>

            <TextBlock>
                <Run Text="Argent : "/>
                <Run Text="{Binding joueur.Money}"/>
            </TextBlock>
            
            <TextBlock Text="Difficulté : 0"/>
            <Separator/>
            <TextBlock>
                <Run Text="Taille : "/>
                <Run Text="{Binding labyrinthe.Taille}"/>
            </TextBlock>
        </StackPanel>

        <Border BorderBrush="Black" BorderThickness="2" Margin="10" DockPanel.Dock="Right">
            <Grid Name="CellGrid" Width="600" Height="600"/>

        </Border>
    </DockPanel>
</UserControl>