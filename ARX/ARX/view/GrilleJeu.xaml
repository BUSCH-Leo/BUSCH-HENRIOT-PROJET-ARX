<UserControl x:Class="ARX.view.GrilleJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Save"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Generation" Click="GenerationMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel DockPanel.Dock="Left" Margin="10">
            <TextBlock Text="Vie : 0"/>
            <TextBlock Text="Argent : 0"/>
            <TextBlock Text="Difficulté : 0"/>
            <Separator/>
            <TextBlock Text="Seed : 0"/>
            <TextBlock Text="Taille : 0"/>
        </StackPanel>

        <Border BorderBrush="Black" BorderThickness="2" Margin="10" DockPanel.Dock="Right">
            <Grid Name="CellGrid" Width="600" Height="600"/>
        </Border>
    </DockPanel>
</UserControl>
