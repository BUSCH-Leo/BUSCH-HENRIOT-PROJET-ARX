<Window x:Class="ARX.view.InventoryWindowCombat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventory" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Inventaire :" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5">
                <ListBox Name="InventoryListBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
